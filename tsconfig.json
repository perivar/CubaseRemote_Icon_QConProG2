{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      ".": [".api"],
      "midiremote_api_v1": [".api/v1"]
    },
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "checkJs": false,
    "lib": ["ES2015"],
    "removeComments": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "skipLibCheck": true
  },
  "include": ["icon/*/*.ts"],
  "exclude": ["cli/"]
}
